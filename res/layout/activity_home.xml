<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_create_todo_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_create_toDo_view" />

        <Button
            android:id="@+id/button_create_event_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_create_event_view" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_create_note_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_create_note_view" />

    </TableRow>

</TableLayout>
